<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="12dp"
    android:padding="12dp"
    android:layout_marginBottom="20dp"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    android:layout_marginTop="30dp"
    app:cardElevation="20dp"
    android:clickable="true"
    android:focusable="true"
    android:background="?attr/selectableItemBackground"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="4dp">

        <TextView
            android:id="@+id/tvLabName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@color/green_p_dark"
            tools:text="Krishi Vigyan Kendra"
            android:textColor="@color/white"
            android:padding="12dp"
            android:textStyle="bold"
            android:textSize="20sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp">
            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Test Name: "
                android:textSize="18sp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/tvTestName"
                android:gravity="center"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textColor="@color/grey_text"
                tools:text="EC-0, PH-0"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp">
            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Testing At: "
                android:textSize="18sp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/tvTestingAt"
                android:gravity="center"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:ellipsize="end"
                android:textColor="@color/grey_text"
                tools:text="EC-0, PH-0"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp">
            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Charges: "
                android:textSize="18sp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/tvCharges"
                android:gravity="center"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textColor="@color/grey_text"
                tools:text="EC-0, PH-0"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp">
            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Contact: "
                android:textSize="18sp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/tvContact"
                android:gravity="center"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textColor="@color/grey_text"
                tools:text="EC-0, PH-0"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp">
            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Location: "
                android:textSize="18sp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/tvLocation"
                android:gravity="center"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:ellipsize="end"
                android:textColor="@color/grey_text"
                tools:text="EC-0, PH-0"/>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>