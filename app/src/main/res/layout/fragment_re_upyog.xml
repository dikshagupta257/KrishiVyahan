<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.view.fragments.ReUpyogFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/flFirstSection"
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <ImageView
                    android:id="@+id/ivReUpyogBg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:foreground="#6F000000"
                    android:scaleType="centerCrop"
                    android:src="@drawable/re_upyog" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="ReUpyog"
                    android:textColor="@color/white"
                    android:textSize="28sp"
                    android:textStyle="bold" />
            </FrameLayout>

            <TextView
                android:id="@+id/tvSecondSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="40dp"
                android:textSize="20sp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:textColor="@color/grey_text"
                android:text="@string/reupyog_content"/>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cvThirdSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="40dp"
                app:cardCornerRadius="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp">

                        <LinearLayout
                            android:id="@+id/llCompost"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_margin="4dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="36dp"
                                android:text="Compost"
                                android:textSize="16sp"
                                android:textColor="@color/black"
                                android:layout_margin="2dp"
                                android:textAlignment="center"
                                android:layout_gravity="center"
                                android:textStyle="bold"
                                android:gravity="center" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Click the card below"
                                android:layout_marginTop="4dp"
                                android:layout_gravity="center" />

                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/cvCompost"
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:layout_marginTop="16dp"
                                android:layout_marginBottom="16dp"
                                android:layout_gravity="center"
                                android:clickable="true"
                                android:background="?attr/selectableItemBackground"
                                app:cardCornerRadius="12dp"
                                app:cardElevation="10dp"
                                app:rippleColor="@color/black">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/compost" />

                            </com.google.android.material.card.MaterialCardView>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llVegetablePeels"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_margin="4dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="36dp"
                                android:text="Vegetable peels and scraps"
                                android:textSize="16sp"
                                android:textColor="@color/black"
                                android:layout_margin="2dp"
                                android:textAlignment="center"
                                android:layout_gravity="center"
                                android:textStyle="bold"
                                android:gravity="center" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Click the card below"
                                android:layout_marginTop="4dp"
                                android:layout_gravity="center" />

                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/cvVegetable"
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:layout_marginTop="16dp"
                                android:layout_marginBottom="16dp"
                                android:layout_gravity="center"
                                android:clickable="true"
                                android:background="?attr/selectableItemBackground"
                                app:cardCornerRadius="12dp"
                                app:cardElevation="10dp"
                                app:rippleColor="@color/black">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/vegetable_peel" />

                            </com.google.android.material.card.MaterialCardView>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="40dp">

                        <LinearLayout
                            android:id="@+id/llPaperTowels"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_margin="4dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="36dp"
                                android:text="Paper Towels and Napkins"
                                android:textSize="16sp"
                                android:textColor="@color/black"
                                android:layout_margin="2dp"
                                android:textAlignment="center"
                                android:layout_gravity="center"
                                android:textStyle="bold"
                                android:gravity="center" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Click the card below"
                                android:layout_marginTop="4dp"
                                android:layout_gravity="center" />

                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/cvPaperTowels"
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:layout_marginTop="16dp"
                                android:layout_marginBottom="16dp"
                                android:layout_gravity="center"
                                android:clickable="true"
                                android:background="?attr/selectableItemBackground"
                                app:cardCornerRadius="12dp"
                                app:cardElevation="10dp"
                                app:rippleColor="@color/black">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/paper_towel" />

                            </com.google.android.material.card.MaterialCardView>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llEggShells"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_margin="4dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="36dp"
                                android:text="Egg Shells"
                                android:textSize="16sp"
                                android:textColor="@color/black"
                                android:layout_margin="2dp"
                                android:textAlignment="center"
                                android:layout_gravity="center"
                                android:textStyle="bold"
                                android:gravity="center" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Click the card below"
                                android:layout_marginTop="4dp"
                                android:layout_gravity="center" />

                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/cvEggShells"
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:layout_marginTop="16dp"
                                android:layout_marginBottom="16dp"
                                android:layout_gravity="center"
                                android:clickable="true"
                                android:background="?attr/selectableItemBackground"
                                app:cardCornerRadius="12dp"
                                app:cardElevation="10dp"
                                app:rippleColor="@color/black">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/egg_shell" />

                            </com.google.android.material.card.MaterialCardView>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="40dp">

                        <LinearLayout
                            android:id="@+id/llOldWater"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_margin="4dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="36dp"
                                android:text="Old Water/Milk Bottle/Jugs"
                                android:textSize="16sp"
                                android:textColor="@color/black"
                                android:layout_margin="2dp"
                                android:textAlignment="center"
                                android:layout_gravity="center"
                                android:textStyle="bold"
                                android:gravity="center" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Click the card below"
                                android:layout_marginTop="4dp"
                                android:layout_gravity="center" />

                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/cvMilkBottle"
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:layout_marginTop="16dp"
                                android:layout_marginBottom="16dp"
                                android:layout_gravity="center"
                                android:clickable="true"
                                android:background="?attr/selectableItemBackground"
                                app:cardCornerRadius="12dp"
                                app:cardElevation="10dp"
                                app:rippleColor="@color/black">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/milk_bottle" />

                            </com.google.android.material.card.MaterialCardView>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llDryLeaves"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_margin="4dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="36dp"
                                android:text="Dry Leaves"
                                android:textSize="16sp"
                                android:textColor="@color/black"
                                android:layout_margin="2dp"
                                android:textAlignment="center"
                                android:layout_gravity="center"
                                android:textStyle="bold"
                                android:gravity="center" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Click the card below"
                                android:layout_marginTop="4dp"
                                android:layout_gravity="center" />

                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/cvDryLeaves"
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:layout_marginTop="16dp"
                                android:layout_marginBottom="16dp"
                                android:layout_gravity="center"
                                android:clickable="true"
                                android:background="?attr/selectableItemBackground"
                                app:cardCornerRadius="12dp"
                                app:cardElevation="10dp"
                                app:rippleColor="@color/black">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/dry_leaves" />

                            </com.google.android.material.card.MaterialCardView>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="40dp">

                        <LinearLayout
                            android:id="@+id/llStrawHays"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_margin="4dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="36dp"
                                android:text="Straw/Hays"
                                android:textSize="16sp"
                                android:textColor="@color/black"
                                android:layout_margin="2dp"
                                android:textAlignment="center"
                                android:layout_gravity="center"
                                android:textStyle="bold"
                                android:gravity="center" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Click the card below"
                                android:layout_marginTop="4dp"
                                android:layout_gravity="center" />

                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/cvStrawHays"
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:layout_marginTop="16dp"
                                android:layout_marginBottom="16dp"
                                android:layout_gravity="center"
                                android:clickable="true"
                                android:background="?attr/selectableItemBackground"
                                app:cardCornerRadius="12dp"
                                app:cardElevation="10dp"
                                app:rippleColor="@color/black">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/straw_hays" />

                            </com.google.android.material.card.MaterialCardView>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llTeaBags"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_margin="4dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="36dp"
                                android:text="Used Tea leaves and Tea Bags"
                                android:textSize="16sp"
                                android:textColor="@color/black"
                                android:layout_margin="2dp"
                                android:textAlignment="center"
                                android:layout_gravity="center"
                                android:textStyle="bold"
                                android:gravity="center" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Click the card below"
                                android:layout_marginTop="4dp"
                                android:layout_gravity="center" />

                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/cvTeaBags"
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:layout_marginTop="16dp"
                                android:layout_marginBottom="16dp"
                                android:layout_gravity="center"
                                android:clickable="true"
                                android:background="?attr/selectableItemBackground"
                                app:cardCornerRadius="12dp"
                                app:cardElevation="10dp"
                                app:rippleColor="@color/black">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/tea_bags" />

                            </com.google.android.material.card.MaterialCardView>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>


</FrameLayout>